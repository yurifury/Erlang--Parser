use strict;
use warnings;
use 5.010;

BEGIN { push @INC, './lib' }

use Parse::Erlang;

my $tree = Parse::Erlang->parse(\*DATA);
Parse::Erlang->print_tree($tree);

__END__
-module(test).
-export([test/0]).

test() ->
    io:format("This is a ~p~n.", ["te\"st"]),
    5,
    2/3+7*10-1,
    2/(3+7*(10-1)).

